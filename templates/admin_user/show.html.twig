{% extends 'admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex">
        <a class="px-1" href="{{ path('app_admin_user_index') }}"><button class="btn btn-primary">back to list</button></a>
        
        <a class="px-1" href="{{ path('app_admin_user_edit', {'id': user.id}) }}"><button class="btn btn-success">edit</button></a>
        
        {{ include('admin_user/_delete_form.html.twig') }}
    </div>
{% endblock %}
