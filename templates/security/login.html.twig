{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as , <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        {% else %}
        <div class="card border-secondary">
            <div class="card-header">Login</div>
            <div class="card-body container">
                <div class="row padding-bottom-10" style="margin-left:8%;margin-right:10%;">
                    <label style="margin-right:5px;" for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="row padding-bottom-10"style="margin-left:8%;margin-right:10%;">
                    <label style="margin-right:5px;"for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
                <div class="d-flex"style="margin-left:8%;margin-right:10%;">
                    <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-primary" type="submit">
                        Se connecter
                    </button>
                </div>
            </div>
          </div>
        </form>
        {% endif %}
        {% endblock %}
